# EditorConfig is awesome: https://EditorConfig.org

[*]
# Unix-style newlines...
end_of_line = lf
# ...with a newline ending every file
insert_final_newline = true
# Set default charset
charset = utf-8

# Indentation override for all JS files:
[*.js]
indent_style = space
indent_size = 2

# Indentation override for all HTML files:
[*.html]
indent_style = space
indent_size = 4
